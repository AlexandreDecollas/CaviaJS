{
  "name": "cavia-js-tmp",
  "version": "0.0.45",
  "description": "Making event-modelling with NestJS easy",
  "author": "Alexandre Decollas<alexandre.decollas.pro@gmail.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build:lib": "rimraf dist && tsc -p ./lib/cavia-js/tsconfig.lib.json",
    "export": "npm publish",
    "build": "nest build",
    "format": "prettier --write \\\"apps/**/*.ts\\\" \\\"lib/**/*.ts\\\"",
    "start:example": "env-cmd nest start hotel-example",
    "start:dev:example": "env-cmd nest start --watch hotel-example",
    "start:debug:example": "env-cmd nest start --debug --watch hotel-example",
    "start:debug:node:example": "env-cmd node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/main.ts",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config apps/hotel-example/test/jest-e2e.json"
  },
  "dependencies": {
    "@eventstore/db-client": "^2.1.1",
    "@grpc/grpc-js": "^1.5.3",
    "@grpc/proto-loader": "^0.6.9",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.0.0",
    "@nestjs/microservices": "^8.2.6",
    "@nestjs/platform-express": "^8.0.0",
    "bullmq": "^1.64.0",
    "env-cmd": "^10.1.0",
    "eventstore-ts-projection-builder": "^1.0.6",
    "moment": "^2.29.1",
    "moment-range": "^4.0.2",
    "nanoid": "^3.1.30",
    "prettier": "^2.3.2",
    "prettier-format": "^3.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sharp": "^0.29.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@swc-node/jest": "^1.4.3",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\-?spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "@swc-node/jest",
        {
          "experimentalDecorators": true,
          "emitDecoratorMetadata": true,
          "swc": {
            "sourceMaps": "inline"
          }
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/lib/",
      "<rootDir>/apps/hotel-example/src"
    ],
    "moduleNameMapper": {
      "^cavia-js$": "<rootDir>/lib/cavia-js/src"
    }
  }
}
